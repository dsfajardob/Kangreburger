{
	"name": "kangreburger",
	"displayName": "Kangreburger",
	"description": "Kengreburger is a dedicated language to describe DOCKERFILES",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:kangreburger.Compile"
	],
	"main": "./out/extension.js",
	"contributes": {		
		"commands": [
			{
				"command": "kangreburger.Compile",
				"title": "Compile"
			}
		],
		"languages": [{
            "id": "almejalang",
            "aliases": ["Almeja", "almejalang"],
            "extensions": [".alm"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "almejalang",
            "scopeName": "src",
            "path": "./syntaxes/almejalang.tmLanguage.json"
		}],
        "snippets": [
            {
                "language": "almejalang",
                "path": "./snippets/AlmejaESP.code-snippets"
            },
            {
                "language": "almejalang",
                "path": "./snippets/AlmejaENG.code-snippets"
            },
            {
                "language": "almejalang",
                "path": "./snippets/AlmejaFRA.code-snippets"
            },
            {
                "language": "almejalang",
                "path": "./snippets/AlmejaDEU.code-snippets"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
